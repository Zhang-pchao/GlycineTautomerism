&GLOBAL
  PROJECT Gly54H2O
  PRINT_LEVEL LOW
  RUN_TYPE MD
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &SUBSYS
    &CELL
      A    12.02800000     0.00000000     0.00000000
      B     0.00000000    12.02800000     0.00000000
      C     0.00000000     0.00000000    12.02800000
      PERIODIC XYZ
    &END CELL
	&TOPOLOGY
	  COORD_FILE_FORMAT XYZ
	  COORD_FILE_NAME init.xyz
	&END TOPOLOGY
  &END SUBSYS

  &DFT
    CHARGE    0 
    MULTIPLICITY    1 
    &QS
      EPS_DEFAULT 1E-10 
      EXTRAPOLATION ASPC 
      EXTRAPOLATION_ORDER 3 
      METHOD xTB
      &xTB
        DO_EWALD T
        CHECK_ATOMIC_CHARGES F 
        &PARAMETER
          DISPERSION_PARAMETER_FILE dftd3.dat
          PARAM_FILE_NAME xTB_parameters
        &END PARAMETER
      &END xTB
    &END QS
    &POISSON
      PERIODIC XYZ 
      PSOLVER PERIODIC 
    &END POISSON
    &SCF
      MAX_SCF 200 
      EPS_SCF 1.0E-05 
      &OT
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER DIIS 
        LINESEARCH 2PNT 
      &END OT
      &PRINT
        &RESTART 
          BACKUP_COPIES 0
        &END RESTART
      &END PRINT
    &END SCF
  &END DFT
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 100000
    TIMESTEP 1.0 
    TEMPERATURE 300 
    &THERMOSTAT
      TYPE CSVR
      &CSVR
        TIMECON 200 
      &END CSVR
    &END THERMOSTAT
  &END MD

  &FREE_ENERGY
    &METADYN
      USE_PLUMED .TRUE.
      PLUMED_INPUT_FILE ./plumed.dat
    &END METADYN
  &END FREE_ENERGY 
  
  &PRINT
    &TRAJECTORY
      &EACH
        MD   10 
      &END EACH
      FORMAT xyz
    &END TRAJECTORY
    &VELOCITIES
      &EACH
        MD   10 
      &END EACH
    &END VELOCITIES
    &RESTART
      BACKUP_COPIES 0 
      &EACH
        MD 50000 
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION

#&EXT_RESTART
#  RESTART_FILE_NAME xxx.restart
#&END EXT_RESTART
